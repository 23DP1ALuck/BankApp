<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Registration">
   <children>
      <AnchorPane fx:id="registrationPage" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #7A73D1;">
         <children>
            <PasswordField id="passField" fx:id="passField" layoutX="237.0" layoutY="164.0" />
            <TextField id="username" fx:id="username" layoutX="237.0" layoutY="111.0" />
            <Label layoutX="240.0" layoutY="147.0" text="Password" textFill="WHITE" />
            <Label layoutX="240.0" layoutY="96.0" text="Login" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Button fx:id="signUpButton" layoutX="343.0" layoutY="297.0" mnemonicParsing="false" style="-fx-background-radius: 20; -fx-background-color: #DDEB9D;" text="Sign up">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label id="alreadyExists" fx:id="alreadyExists" alignment="CENTER" layoutY="359.0" prefHeight="27.0" prefWidth="605.0" textFill="RED">
               <font>
                  <Font name="Arial Bold" size="23.0" />
               </font>
            </Label>
            <Label layoutX="248.0" layoutY="334.0" text="Already have an account?" />
            <Button fx:id="signInButton" layoutX="274.0" layoutY="361.0" mnemonicParsing="false" style="-fx-background-color: #FFA725; -fx-background-radius: 10;" text="Switch to login">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label alignment="CENTER" layoutX="191.0" layoutY="14.0" prefHeight="82.0" prefWidth="255.0" text="Join Us Today!" textFill="WHITE">
               <font>
                  <Font size="37.0" />
               </font>
            </Label>
            <TextField id="username" fx:id="name" layoutX="237.0" layoutY="216.0" />
            <Label layoutX="240.0" layoutY="200.0" text="Name" textFill="WHITE" />
            <TextField id="username" fx:id="surname" layoutX="237.0" layoutY="265.0" />
            <Label layoutX="239.0" layoutY="248.0" text="Surname" textFill="WHITE" />
         </children>
      </AnchorPane>

      <AnchorPane fx:id="loginPage" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #7A73D1 BLACK;" visible="false">
         <children>
            <Label layoutX="260.0" layoutY="282.0" text="Don't have an account?" />
            <PasswordField id="passField" fx:id="passFieldInLoginPage" layoutX="237.0" layoutY="200.0" />
            <TextField id="username" fx:id="usernameInLoginPage" layoutX="237.0" layoutY="133.0" />
            <Label layoutX="237.0" layoutY="116.0" text="Login" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Label layoutX="237.0" layoutY="183.0" text="Password" textFill="WHITE" />
            <Button fx:id="signInInLoginPage" layoutX="331.0" layoutY="245.0" mnemonicParsing="false" style="-fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: #DDEB9D;" text="Sign in">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="signUpInLoginPage" alignment="CENTER" layoutX="251.0" layoutY="361.0" mnemonicParsing="false" style="-fx-background-color: #FFA725; -fx-background-radius: 10;" text="Back to registration">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label layoutX="231.0" layoutY="299.0" text="Press the button below to sign up!" />
            <Label id="exception" fx:id="error" alignment="CENTER" contentDisplay="CENTER" layoutX="18.0" layoutY="323.0" prefHeight="34.0" prefWidth="587.0" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font></Label>
            <Label alignment="CENTER" layoutX="13.0" layoutY="15.0" prefHeight="105.0" prefWidth="578.0" text="Log In to Continue" textFill="WHITE">
               <font>
                  <Font size="37.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</StackPane>
